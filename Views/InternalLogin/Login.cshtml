@{

    Layout = null;
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="~/css/LoginInternal.css" />
    <script type="text/javascript" src="~/js/LoginInternal.js"></script>
</head>
<body>
    <div class="container" id="container">
        <div class="form-container sign-in-container">
            <form action="@Url.Action("Login","InternalLogin")" method="post">
                <h1>Inmuebles</h1>
                <div class="social-container">
                    <a href="#" class="social"><i class="bi bi-house"></i></a>
                    <a href="#" class="social"><i class="fab fa-google-plus-g"></i></a>
                    <a href="#" class="social"><i class="fab fa-linkedin-in"></i></a>
                </div>
                <input type="email" placeholder="Correo electronico" name="Email" />
                <input type="password" placeholder="Contraseña" name="Password" />
                <button type="submit">Entrar</button>
            </form>
        </div>
        <div class="overlay-container">
            <div class="overlay">
                <div class="overlay-panel overlay-right">
                    <h1>Bienvenido</h1>
                    <p>Ingresa tus credenciales para iniciar sesión</p>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
<footer>
    <p>
        <i class="fa fa-heart"></i>&copy; 2023 - InmueblesWeb - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
    </p>
</footer>