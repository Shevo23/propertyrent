@model InmueblesWeb.Models.LoginModel

@{
    Layout = null;
}
<!DOCTYPE html>

<html>
<head>
    <title>Login - Inmobiliaria</title>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="~/css/LoginInternal.css" />
    <link rel="shortcut icon" type="image/x-icon" href="~/images/logo.ico" />
</head>
<body>
    <div class="container" id="container">
        <div class="form-container sign-in-container">
            <form action="@Url.Action("Login","InternalLogin")" method="post">
                <h1>Inmobiliaria Serv.</h1>
                <br />
                <input type="email" placeholder="Correo electronico" name="Email" />
                <span asp-validation-for="Email" class="text-danger"></span>
                <input type="password" placeholder="Contraseña" name="Password" />
                <span asp-validation-for="Password" class="text-danger"></span>
                <br />
                <button type="submit">Entrar</button>
            </form>
        </div>
        <div class="overlay-container">
            <div class="overlay">
                @*<div class="overlay-panel overlay-right">
                    <h1>Bienvenido</h1>
                    <p>Ingresa tus credenciales para iniciar sesión</p>
                </div>*@
            </div>
        </div>
    </div>
</body>
</html>
<footer>
    <p>
        <i class="fa fa-heart"></i>&copy; 2023 - Inmobiliaria Serv. - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
    </p>
</footer>